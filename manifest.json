{
    "manifest_version": 3,
    "name": "JobHunter",
    "version": "1.0",
    "description": "İş ilanı verilerini topla ve göster",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://www.linkedin.com/*","http://localhost:8000/*"],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  